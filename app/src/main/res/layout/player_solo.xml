<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mr_alex.mygame.playerSolo">

    <Button
        android:id="@+id/button_difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:onClick="openPopupmenu"
        android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
        app:layout_constraintBottom_toTopOf="@+id/tvInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="318dp"
        android:layout_height="100dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_difficulty" />

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="318dp"
        android:layout_height="100dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo" />

    <Button
        android:id="@+id/num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="33dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_1"
        app:layout_constraintBottom_toTopOf="@+id/num_4"
        app:layout_constraintEnd_toStartOf="@+id/num_2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_2"
        app:layout_constraintBottom_toTopOf="@+id/num_5"
        app:layout_constraintEnd_toStartOf="@+id/num_3"
        app:layout_constraintStart_toEndOf="@+id/num_1" />

    <Button
        android:id="@+id/num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_3"
        app:layout_constraintBottom_toTopOf="@+id/num_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_2" />

    <Button
        android:id="@+id/num_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="33dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_4"
        app:layout_constraintBottom_toTopOf="@+id/num_7"
        app:layout_constraintEnd_toStartOf="@+id/num_5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_5"
        app:layout_constraintBottom_toTopOf="@+id/num_8"
        app:layout_constraintEnd_toStartOf="@+id/num_6"
        app:layout_constraintStart_toEndOf="@+id/num_4" />

    <Button
        android:id="@+id/num_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_6"
        app:layout_constraintBottom_toTopOf="@+id/num_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_5" />

    <Button
        android:id="@+id/num_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="33dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_7"
        app:layout_constraintBottom_toTopOf="@+id/button_delete"
        app:layout_constraintEnd_toStartOf="@+id/num_8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_8"
        app:layout_constraintBottom_toTopOf="@+id/num_0"
        app:layout_constraintEnd_toStartOf="@+id/num_9"
        app:layout_constraintStart_toEndOf="@+id/num_7" />

    <Button
        android:id="@+id/num_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_9"
        app:layout_constraintBottom_toTopOf="@+id/button_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_8" />

    <Button
        android:id="@+id/num_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_enter"
        app:layout_constraintStart_toEndOf="@+id/button_delete" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="33dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/num_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_0" />

</android.support.constraint.ConstraintLayout>