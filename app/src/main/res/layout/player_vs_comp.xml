<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mr_alex.mygame.playerVScomp">

    <TextView
        android:id="@+id/tvComp1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_difficulty" />

    <TextView
        android:id="@+id/tvComp2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvComp1" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tvInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvComp2" />

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInfo" />

    <Button
        android:id="@+id/num_1"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_1"
        app:layout_constraintEnd_toStartOf="@+id/num_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInput" />

    <Button
        android:id="@+id/num_2"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_2"
        app:layout_constraintEnd_toStartOf="@+id/num_3"
        app:layout_constraintStart_toEndOf="@+id/num_1"
        app:layout_constraintTop_toBottomOf="@+id/tvInput" />

    <Button
        android:id="@+id/num_3"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_3"
        app:layout_constraintEnd_toStartOf="@+id/num_4"
        app:layout_constraintStart_toEndOf="@+id/num_2"
        app:layout_constraintTop_toBottomOf="@+id/tvInput" />

    <Button
        android:id="@+id/num_4"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_3"
        app:layout_constraintTop_toBottomOf="@+id/tvInput" />

    <Button
        android:id="@+id/num_5"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:onClick="onClick"
        android:text="@string/num_5"
        app:layout_constraintBottom_toTopOf="@+id/num_9"
        app:layout_constraintEnd_toStartOf="@+id/num_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_1" />

    <Button
        android:id="@+id/num_6"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:onClick="onClick"
        android:text="@string/num_6"
        app:layout_constraintBottom_toTopOf="@+id/num_0"
        app:layout_constraintEnd_toStartOf="@+id/num_7"
        app:layout_constraintStart_toEndOf="@+id/num_5"
        app:layout_constraintTop_toBottomOf="@+id/num_2" />

    <Button
        android:id="@+id/num_7"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:onClick="onClick"
        android:text="@string/num_7"
        app:layout_constraintBottom_toTopOf="@+id/button_delete"
        app:layout_constraintEnd_toStartOf="@+id/num_8"
        app:layout_constraintStart_toEndOf="@+id/num_6"
        app:layout_constraintTop_toBottomOf="@+id/num_3" />

    <Button
        android:id="@+id/num_8"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:onClick="onClick"
        android:text="@string/num_8"
        app:layout_constraintBottom_toTopOf="@+id/button_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_7"
        app:layout_constraintTop_toBottomOf="@+id/num_4" />

    <Button
        android:id="@+id/num_9"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/num_0"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_delete"
        app:layout_constraintStart_toEndOf="@+id/num_9" />

    <Button
        android:id="@+id/button_delete"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_enter"
        app:layout_constraintStart_toEndOf="@+id/num_0" />

    <Button
        android:id="@+id/button_enter"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_rounded_corner"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="@string/num_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_delete" />

    <Button
        android:id="@+id/button_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:onClick="openPopupmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
