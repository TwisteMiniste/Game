<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mr_alex.mygame.mainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/playerSolo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="@string/player_solo"
            android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:translationZ="4dp"
            android:textSize="50sp"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/playerVScomp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="onClick"
            android:text="@string/player_ai"
            android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:translationZ="4dp"
            android:textSize="45sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/holo_purple">

        <Button
            android:id="@+id/playerVSplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:onClick="onClick"
            android:text="@string/pvp"
            android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:elevation="6dp"
            android:stateListAnimator="@null"
            android:translationZ="4dp"
            android:textSize="45sp"
            android:fontFamily="monospace" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/settings_icon" />
    </LinearLayout>

</LinearLayout>