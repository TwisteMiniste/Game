<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mr_alex.mygame.mainMenu">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/playerSolo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:elevation="6dp"
            android:fontFamily="monospace"
            android:onClick="onClick"
            android:stateListAnimator="@null"
            android:text="@string/player_solo"
            android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textSize="50sp"
            android:translationZ="4dp" />

        <Button
            android:id="@+id/playerVScomp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:elevation="6dp"
            android:fontFamily="monospace"
            android:onClick="onClick"
            android:stateListAnimator="@null"
            android:text="@string/player_ai"
            android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textSize="45sp"
            android:translationZ="4dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/holo_purple"
        android:orientation="horizontal">

        <Button
            android:id="@+id/playerVSplayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:elevation="6dp"
            android:fontFamily="monospace"
            android:onClick="onClick"
            android:stateListAnimator="@null"
            android:text="@string/pvp"
            android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textSize="45sp"
            android:translationZ="4dp" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:scaleX="0.7"
            android:scaleY="0.7" />
    </TableRow>

</TableLayout>